<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutScreenDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbarScreenDetail"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/activity_detail_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvMatchTitle"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutScreenDetail"
        tools:text="Match Description" />

    <ImageView
        android:id="@+id/ivHomeTeamShield"
        android:layout_width="@dimen/team_shield_size"
        android:layout_height="@dimen/team_shield_size"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:contentDescription="@string/cd_iv_home_team_shield"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivAwayTeamShield"
        android:layout_width="@dimen/team_shield_size"
        android:layout_height="@dimen/team_shield_size"
        android:layout_marginEnd="@dimen/margin_default"
        android:contentDescription="@string/cd_iv_away_team_shield"
        app:layout_constraintBottom_toBottomOf="@+id/ivHomeTeamShield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivHomeTeamShield"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvVersus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_versus"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/ivHomeTeamShield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivHomeTeamShield" />

    <TextView
        android:id="@+id/tvHomeTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/ivHomeTeamShield"
        app:layout_constraintEnd_toStartOf="@+id/tvVersus"
        app:layout_constraintStart_toEndOf="@+id/ivHomeTeamShield"
        app:layout_constraintTop_toTopOf="@+id/ivHomeTeamShield"
        tools:text="11" />

    <TextView
        android:id="@+id/tvAwayTeamScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/ivAwayTeamShield"
        app:layout_constraintEnd_toStartOf="@+id/ivAwayTeamShield"
        app:layout_constraintStart_toEndOf="@+id/tvVersus"
        app:layout_constraintTop_toTopOf="@+id/ivAwayTeamShield"
        tools:text="13" />

    <TextView
        android:id="@+id/tvHomeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="@+id/ivHomeTeamShield"
        app:layout_constraintStart_toStartOf="@+id/ivHomeTeamShield"
        app:layout_constraintTop_toBottomOf="@+id/rbHomeTeam"
        tools:text="Home Team" />

    <TextView
        android:id="@+id/tvAwayTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="@+id/ivAwayTeamShield"
        app:layout_constraintStart_toStartOf="@+id/ivAwayTeamShield"
        app:layout_constraintTop_toBottomOf="@+id/rbAwayTeam"
        tools:text="Away Team" />

    <RatingBar
        android:id="@+id/rbHomeTeam"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="@+id/ivHomeTeamShield"
        app:layout_constraintStart_toStartOf="@+id/ivHomeTeamShield"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeTeamShield"
        tools:rating="5" />

    <RatingBar
        android:id="@+id/rbAwayTeam"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="@+id/ivAwayTeamShield"
        app:layout_constraintStart_toStartOf="@+id/ivAwayTeamShield"
        app:layout_constraintTop_toBottomOf="@+id/ivAwayTeamShield"
        tools:rating="2" />

</androidx.constraintlayout.widget.ConstraintLayout>